@page
@model LanguageLearning.Pages.Japanese.Kana.HiraganaIndexModel

@{
    ViewData["Title"] = "Hiragana";
}
<h2>List of Hiragana</h2>
<body>    
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Hiragana[0].Kana)
                </th>
                <th>                    
                    @Html.DisplayNameFor(model => model.Hiragana[0].Romaji)
                </th>                
                <th></th>
            </tr>
        </thead>
        <tbody>            
            @foreach (var item in Model.ListHiragana)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Kana)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Romaji)
                    </td>                                      
                </tr>
            }
        </tbody>
    </table>    
</body>
